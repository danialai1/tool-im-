         const selectedCategories \u003d Array.from(categoryFilterList.querySelectorAll(\u0027input[name\u003d\"category\"]:checked\u0027))\n                                         .map(cb \u003d\u003e cb.value)\n                                         .filter(val \u003d\u003e val !\u003d\u003d \u0027all\u0027); // Exclude \u0027all\u0027 if other categories are selected\n\n            const selectedPricings \u003d Array.from(pricingFilterList.querySelectorAll(\u0027input[name\u003d\"pricing\"]:checked\u0027))\n                                       .map(cb \u003d\u003e cb.value);\n\n            // Search\n            if (searchTerm) {\n                tempTools \u003d tempTools.filter(tool \u003d\u003e\n                    tool.name.toLowerCase().includes(searchTerm) ||\n                    tool.description.toLowerCase().includes(searchTerm) ||\n                    tool.tags.some(tag \u003d\u003e tag.toLowerCase().includes(searchTerm))\n                );\n            }\n\n            // Category Filter\n            if (selectedCategories.length \u003e 0) {\n                tempTools \u003d tempTools.filter(tool \u003d\u003e selectedCategories.includes(tool.category));\n            }\n            \n            // Pricing Filter\n            if (selectedPricings.length \u003e 0) {\n                tempTools \u003d tempTools.filter(tool \u003d\u003e selectedPricings.includes(tool.pricing));\n            }\n\n            // Sort\n            const sortBy \u003d sortBySelect.value;\n            if (sortBy \u003d\u003d\u003d \u0027popular\u0027) tempTools.sort((a, b) \u003d\u003e b.popular - a.popular);\n            else if (sortBy \u003d\u003d\u003d \u0027newest\u0027) tempTools.sort((a, b) \u003d\u003e new Date(b.dateAdded) - new Date(a.dateAdded));\n            else if (sortBy \u003d\u003d\u003d \u0027rating\u0027) tempTools.sort((a,b) \u003d\u003e b.rating - a.rating);\n            // \u0027relevance\u0027 would be complex and typically handled by a backend search