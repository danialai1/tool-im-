`javascript\ndocument.addEventListener(\u0027DOMContentLoaded\u0027, () \u003d\u003e {\n    const toolListElement \u003d document.getElementById(\u0027toolList\u0027);\n    const searchInputElement \u003d document.getElementById(\u0027searchInput\u0027);\n    const categoryFilterElement \u003d document.getElementById(\u0027categoryFilter\u0027);\n\n    // --- Sample AI Tool Data ---\n    // In a real application, this would come from a backend API or a larger JSON file.\n    const aiTools \u003d [\n        {\n            id: 1,\n            name: \"ContentScribe AI\",\n            description: \"Generate high-quality blog posts, articles, and marketing copy in seconds.\",\n            category: \"writing\",\n            tags: [\"copywriting\", \"blogging\", \"seo\"],\n            website: \"https://example.com/contentscribe\",\n            logo: \"https://via.placeholder.com/60/007BFF/FFFFFF?Text\u003dCS\" // Placeholder logo\n        },\n        {\n            id: 2,\n            name: \"PixelDreamer\",\n            description: \"Create stunning and unique images from text prompts using advanced AI.\",\n            category: \"image\",\n            tags: [\"art\", \"design\", \"text-to-image\"],\n            website: \"https://example.com/pixeldreamer\",\n            logo: \"https://via.placeholder.com/60/28A745/FFFFFF?Text\u003dPD\"\n        },\n        {\n            id: 3,\n            name: \"CodeWhiz\",\n            description: \"AI-powered code generation and completion for various programming languages.\",\n            category: \"code\",\n            tags: [\"developer\", \"programming\", \"automation\"],\n            website: \"https://example.com/codewhiz\",\n            logo: \"https://via.placeholder.com/60/FFC107/000000?Text\u003dCW\"\n        },\n        {\n            id: 4,\n            name: \"VideoCraft AI\",\n            description: \"Edit videos, add effects, and generate subtitles automatically with AI.\",\n            category: \"video\",\n            tags: [\"editing\", \"marketing\", \"content creation\"],\n            website: \"https://example.com/videocraft\",\n            logo: \"https://via.placeholder.com/60/DC3545/FFFFFF?Text\u003dVC\"\n        },\n        {\n            id: 5,\n            name: \"ScriptPerfect\",\n            description: \"AI assistant for writing compelling scripts for videos and podcasts.\",\n            category: \"writing\",\n            tags: [\"scriptwriting\", \"video content\", \"podcasting\"],\n            website: \"https://example.com/scriptperfect\",\n            logo: \"https://via.placeholder.com/60/17A2B8/FFFFFF?Text\u003dSP\"\n        },\n        {\n            id: 6,\n            name: \"AudioSynth Pro\",\n            description: \"Generate realistic text-to-speech voices and create custom audio.\",\n            category: \"audio\",\n            tags: [\"tts\", \"voiceover\", \"podcast\"],\n            website: \"https://example.com/audiosynth\",\n            logo: \"https://via.placeholder.com/60/6F42C1/FFFFFF?Text\u003dAS\"\n        }\n        // Add more tools here...\n    ];\n\n    let currentFilterCategory \u003d \u0027all\u0027;\n    let currentSearchTerm \u003d \u0027\u0027;\n\n    // --- Function to Display Tools ---\n    function displayTools(toolsToDisplay) {\n        toolListElement.innerHTML \u003d \u0027\u0027; // Clear existing tools\n\n        if (toolsToDisplay.length \u003d\u003d\u003d 0) {\n            toolListElement.innerHTML \u003d \u0027\u003cp\u003eNo tools found matching your criteria.\u003c/p\u003e\u0027;\n            return;\n        }\n\n        toolsToDisplay.forEach(tool \u003d\u003e {\n            const toolCard \u003d document.createElement(\u0027div\u0027);\n            toolCard.classList.add(\u0027tool-card\u0027);\n            toolCard.innerHTML \u003d `\n                ${tool.logo ? `\u003cimg src\u003d\"${tool.logo}\" alt\u003d\"${tool.name} Logo\" class\u003d\"tool-logo\"\u003e` : \u0027\u0027}\n                \u003c